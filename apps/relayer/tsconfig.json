{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../packages/shared-types/*"]
    },
    "target": "ES2020",
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
