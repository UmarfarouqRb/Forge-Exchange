{
  "name": "forge-exchange",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --",
    "build": "turbo run build",
    "start": "turbo run start",
    "check": "turbo run check",
    "db:push": "turbo run db:push",
    "lint": "turbo run lint",
    "install:services": "npm install --workspaces --if-present",
    "start:services": "turbo run start --filter='./apps/relayer'",
    "start:price-engine": "node apps/price-engine/index.js"
  },
  "overrides": {
    "drizzle-kit": "latest",
    "esbuild": "latest",
    "drizzle-orm": "0.38.4",
    "drizzle-zod": "0.6.0"
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "turbo": "^2.6.3"
  },
  "packageManager": "npm@10.8.1",
  "dependencies": {
    "@types/pg": "^8.16.0",
    "pg": "^8.16.3",
    "viem": "^2.43.4",
    "vite-tsconfig-paths": "^6.0.3"
  }
}
