{
  "compilerOptions": {
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/frontend/src/*"],
      "@forge/db": ["packages/schema/dist"],
      "relayer": ["apps/relayer/src/index.ts"],
      "@forge/database": ["packages/database/src"]
    }
  },
  "exclude": ["node_modules", "*.tsbuildinfo"]
}
