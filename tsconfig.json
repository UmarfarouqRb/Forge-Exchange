{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/frontend/src/*"],
      "@forge/db": ["packages/schema/src/index.ts"],
      "relayer": ["apps/relayer/src/index.ts"],
      "@forge/database": ["packages/database/src"]
    }
  },
  "references": [
    { "path": "./packages/schema" },
    { "path": "./apps/frontend" },
    { "path": "apps/api" },
    { "path": "apps/relayer" }
  ],
  "include": [],
  "exclude": ["node_modules", "*.tsbuildinfo"]
}
