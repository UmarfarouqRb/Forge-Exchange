{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/frontend/src/*"],
      "@forge/common": ["packages/common/src"],
      "@forge/core-sdk": ["packages/core-sdk/src"],
      "@forge/crypto": ["packages/crypto/src"],
      "@forge/db": ["packages/schema/src"],
      "@forge/intent-types": ["packages/intent-types/src"],
      "@forge/schema": ["packages/schema/src"],
      "relayer": ["apps/relayer/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", ".turbo", "*.tsbuildinfo"]
}